# See Makefile-commented for explanation
CFLAGS = -Wall -g 
CC     = gcc $(CFLAGS)

PROGRAMS = bl_server.o bl_client.o

all : $(PROGRAMS)

serv_funcs.o : server_funcs.c blather.h
	     $(CC) -c $<

bl_server : bl_server.c blather.h
	     $(CC) -c $<

bl_client : bl_client.c blather.h
	$(CC) -c $< -pthread

clean:
	rm -f *.o


## TEST TARGETS
TEST_PROGRAMS = test_blather.sh test_blather_data.sh normalize.awk cat_sig.sh filter-semopen-bug.awk 

test : test-blather

make test-blather : bl_client bl_server $(TEST_PROGRAMS)
	chmod u+rx $(TEST_PROGRAMS)
	./test_blather.sh

clean-tests :
	cd test-data && \
	rm -f *.* 


